{
    "name": "waste-guard",
    "productName": "WasteGuard",
    "version": "1.0.0",
    "description": "Sistema di classificazione rifiuti",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "author": "Biorigeneral Informatics",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "chart.js": "^3.7.0",
        "electron-store": "^8.1.0",
        "exceljs": "^4.4.0",
        "jspdf": "^3.0.1",
        "sqlite3": "^5.1.7"
    },
    "build": {
        "appId": "com.biorigeneral.wasteguard",
        "productName": "WasteGuard",
        "directories": {
            "output": "build"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "app/assets/icons/app-icon.ico"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "app/assets/icons/app-icon.icns"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "icon": "app/assets/icons/app-icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "protocols": {
            "name": "wasteguard-protocol",
            "schemes": [
                "wasteguard"
            ]
        },
        "fullScreen": true
    }
}
