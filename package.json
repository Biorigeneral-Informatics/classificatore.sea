{
  "name": "waste-guard",
  "productName": "WasteGuard",
  "version": "0.0.3",
  "description": "Sistema di classificazione rifiuti",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Biorigeneral Informatics",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "chart.js": "^3.7.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "jspdf": "^3.0.1"
  },
  "build": {
    "appId": "com.biorigeneral.wasteguard",
    "productName": "WasteGuard",
    "directories": {
      "output": "build"
    },
    "publish": {
    "provider": "github",
    "owner": "Biorigeneral-Informatics",
    "repo": "classificatore.sea"
  },
    "forceCodeSigning": false,
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "app/**/*",
      "!app/DB/**/*",
      "!app/*.py",
      "!.venv/**/*"
    ],
    "extraResources": [
      {
        "from": ".venv",
        "to": ".venv",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "app/DB/",
        "to": "app/DB/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "app/",
        "to": "app/",
        "filter": [
          "*.py"
        ]
      },
      {
        "from": "app/echa/",
        "to": "app/echa/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "app/assets/icons/app-icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "app/assets/icons/app-icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "app/assets/icons/app-icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "protocols": {
      "name": "wasteguard-protocol",
      "schemes": [
        "wasteguard"
      ]
    }
  }
}
